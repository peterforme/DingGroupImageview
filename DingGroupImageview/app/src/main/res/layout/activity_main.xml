<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ding="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dlodloclose.com.dinggroupimageview.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click me to change"
        android:id="@+id/button" />

    <dlodloclose.com.dinggroupimageview.DingGroupImageview
        android:id="@+id/dingImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ding:st_radius = "30dp"
        android:layout_margin="10dp"
        />

    <dlodloclose.com.dinggroupimageview.DingGroupImageview
        android:id="@+id/dingImg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

    <dlodloclose.com.dinggroupimageview.DingGroupImageview
        android:id="@+id/dingImg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

    <dlodloclose.com.dinggroupimageview.DingGroupImageview
        android:id="@+id/dingImg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

</LinearLayout>
